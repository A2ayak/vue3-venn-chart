{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,
		"noEmit": true
	},
	"include": [
		"packages/**/*.ts",
		"packages/**/*.d.ts",
		"packages/**/*.tsx",
		"packages/**/*.vue",
		"*.d.ts"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
